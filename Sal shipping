def shipping_cost_ground(weight):
  if weight<=2:
    price_per_pound=1.50
  elif weight>2 and weight<=6:
    price_per_pound=3.00
  elif weight>6 and weight<=10:
    price_per_pound=4.00
  elif weight>10:
    price_per_pound=4.75
  return 20+(weight*price_per_pound)
print(shipping_cost_ground(8.4))

shipping_premium_cost=125.00

def shipping_cost_drone(weight):
  if weight<=2:
    price_per_pound=4.50
  elif weight>2 and weight<=6:
    price_per_pound=9.00
  elif weight>6 and weight<=10:
    price_per_pound=12.00
  elif weight>10:
    price_per_pound=14.25
  return weight*price_per_pound
print(shipping_cost_drone(1.5))

def cheapest_method_and_cost(weight):
  ground=shipping_cost_ground(weight)
  drone=shipping_cost_drone(weight)
  premium=shipping_premium_cost


  if ground<drone and ground<premium:
    method= "ground"
    cost=ground
  elif drone<ground and drone<premium:
    method="drone"
    cost=drone
  else:
    method="premium"
    cost=premium

  return("The cheapest option available is %s with   shipping cost of %.2f." %(method,cost))

print(cheapest_method_and_cost(4.8))
print(cheapest_method_and_cost(41.5))
